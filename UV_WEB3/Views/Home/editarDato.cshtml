@model UV_WEB3.Models.Datos

@{
    ViewData["Title"] = "Editar dato";
}




<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Editar: @(Model.Nombre)</h2>

            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br>




            <form asp-action="editarDato" class="form-horizontal form-label-left">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">

                    <label asp-for="IdDato" class="control-label col-md-3 col-sm-3 col-xs-12">ID Dato</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="IdDato" required class="form-control col-md-7 col-xs-12 " disabled="disabled" />
                        <input type="hidden" asp-for="IdDato" />
                    </div>
                    <span asp-validation-for="IdDato" class="text-danger"></span>


                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label col-md-3 col-sm-3 col-xs-12"></label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="Nombre" required class="form-control col-md-7 col-xs-12" />
                    </div>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnidadMedida" class="control-label col-md-3 col-sm-3 col-xs-12">Unidad de Medida</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="UnidadMedida" required class="form-control col-md-7 col-xs-12" />
                    </div>
                    <span asp-validation-for="UnidadMedida" class="text-danger"></span>
                </div>


                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button type="submit" value="Save" class="btn btn-success">Agregar</button>
                        <button class="btn btn-dark" type="button"><a href="@Url.Action("verDatos", "Home")" style="color: white">Cancelar</a></button>

                    </div>
                </div>
            </form>




        </div>

    </div>

</div>
<div style="margin-left: 10px;">
    <button class="btn btn-primary" type="button"><a href="@Url.Action("Index", "Home")" style="color: white">Inicio</a></button>

</div>


<!-- jQuery -->
<script src="~/vendors/jquery/dist/jquery.min.js"></script>
<!-- Bootstrap -->
<script src="~/vendors/bootstrap/dist/js/bootstrap.min.js"></script>